{
    "lang.c": {
        "${os linux}": {
            "lib": [
                "rt",
                "pthread",
                "m"
            ]
        },
        "${os windows}": {
            "defines": [
                "_WINDOWS",
                "_USRDLL",
                "CGLM_EXPORTS",
                "CGLM_DLL"
            ]
        },
        "${os darwin}": {
            "ldflags": [
                "-framework Cocoa",
                "-framework QuartzCore",
                "-framework OpenGL"
            ]
        },
        "${target em}": {
            "ldflags": [
                "-s USE_WEBGL2=1"
            ]
        }
    }
}